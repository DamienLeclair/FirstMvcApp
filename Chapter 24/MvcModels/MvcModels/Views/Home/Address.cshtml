@model IEnumerable<MvcModels.Models.AddressSummary>

@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Address</h2>

@if (!Model.Any())
{
    using (Html.BeginForm())
    {
        for (var i = 0; i < 3; i++)
        {
            <fieldset>
                <legend>Address @(i+1)</legend>
                <div><label>City:</label>@Html.Editor(string.Format("[{0}].City", i))</div>
                <div><label>Country:</label>@Html.Editor(string.Format("[{0}].Country", i))</div>
            </fieldset>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (var address in Model)
    {
        <p>@address.City, @address.Country</p>
    }
    @Html.ActionLink("Back", "Address");
}
